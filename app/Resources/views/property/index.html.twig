{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="col-3 text-warning">Properties</h1>
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Keys</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Pricing</th>
                        <th>Rooms</th>
                        <th>Max Guests</th>
                        <th href="{{ path('_new') }}"><a href="{{ path('_new') }}"><button class="btn btn-success"><i class="fas fa-plus-square"></i></button></a></th>
                    </tr>
                </thead>
                <tbody>
                {% set i = 0 %}
                {% for property in properties %}
                    {% set i = i+1 %}
                    <tr>
                        <td>{{ i }}</td>
                        <td></td>
                        <td><a href="{{ path('_show', { 'id': property.id }) }}">{{ property.name }}</a></td>
                        <td>{{ property.location }}</td>
                        <td>{{ property.price }} Â£/ Night</td>
                        <td>{{ property.rooms }}</td>
                        <td>{{ property.maxgests }}</td>
                        <td>
                            <a href="{{ path('_delete', { 'id': property.id }) }}"><button type="button" class="btn btn-warning"><i class="fas fa-trash-alt"></i></button></a>
                            <a href="{{ path('_edit', { 'id': property.id }) }}"><button type="button" class="btn btn-danger"><i class="far fa-edit"></i>

                                </button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
